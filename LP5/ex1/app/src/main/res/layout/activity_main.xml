<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:padding="24dp">

    <TextView
        android:id="@+id/batteryLevelText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Battery Level: --%"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnCheckBattery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/btnCheckBattery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Check Battery Level"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:backgroundTint="#3B82F6"
        android:textColor="#FFFFFF"
        android:paddingVertical="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@+id/batteryLevelText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
